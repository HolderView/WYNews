<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_item_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_item_question_headpic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="2dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/tv_item_question_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/iv_item_question_headpic"
                    android:text="name"
                    android:textColor="@android:color/black" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/tv_item_question_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/tv_item_question_name"
                    android:text="title"
                    android:textColor="@android:color/black" />


                <LinearLayout
                    android:layout_below="@id/iv_item_question"
                    android:id="@+id/ll_item_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:textSize="10sp"
                        android:id="@+id/tv_item_question_classification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="classification"
                        android:textColor="@android:color/holo_blue_light" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="#868686" />

                    <TextView
                        android:textSize="10sp"
                        android:id="@+id/tv_item_question_concerncount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="concernCount" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="#868686" />

                    <TextView
                        android:textSize="10sp"
                        android:id="@+id/tv_item_question_questioncount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="questionCount" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
                <TextView
                    android:layout_below="@id/iv_item_question"
                    android:id="@+id/tv_item_question_alias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="alias"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_item_question_alias"
                    android:padding="8dp"
                    android:src="@mipmap/crm_add_focus" />


            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>